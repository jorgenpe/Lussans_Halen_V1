@model CreateWeekMenuViewModel
 <table>

     <head>

        <h1>Dagens rätt v.@Model.Week</h1> 
        <form asp-action="PrivateIndex" method="post">
    
            <label asp-for="WeekNumber">Veckonummer:</label>
            <select asp-for="WeekNumber"  asp-items="@(new SelectList(Model.Weeks))"></select>
            <span asp-validation-for="WeekNumber"></span>
            <button type="submit" class="btn btn-outline-dark">Ändra vecka</button>
        </form>

          <h2>Dagens pris: @Model.DayPrice</h2>
         

     </head>

     <div class= "col-sm">
            <a class="btn btn-outline-dark" asp-area="" asp-controller="WeekMenu" asp-action="Create"  >Skapa ny veckomeny</a>
            
